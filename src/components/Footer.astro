---
import Icon from "astro-icon";
import { mediaLinks } from "../data";
---

<footer class="bg-cyan-dark text-cyan">
  <div class="container mx-auto pt-8 pb-12 px-4 grid gap-6">
    <img src="/assets/logo-footer.svg" alt="" />
    <div class="grid grid-cols-1 gap-4 md:grid-cols-7">
      <div class="grid md:col-span-3 grid-cols-footer gap-x-4 gap-y-5">
        <Icon name="location" size={18} />
        <p class="max-w-sm">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua
        </p>
        <Icon name="phone" size={18} />
        <p>+1-543-123-4567</p>
        <Icon name="email" size={18} />
        <p>example@huddle.com</p>
      </div>
      <ul class="link-list grid place-content-start gap-2">
        <li>About Us</li>
        <li>What We Do</li>
        <li>FAQ</li>
      </ul>
      <ul class="link-list grid place-content-start gap-2">
        <li>Career</li>
        <li>Blog</li>
        <li>Contact Us</li>
      </ul>
      <div
        class="grid md:col-span-2 gap-y-4 md:text-start text-center relative"
      >
        <div class="flex justify-center md:justify-start items-start gap-3">
          {
            mediaLinks.map((link) => (
              <span class=" border border-current rounded-full p-2 inline-block hover:border-pink hover:text-pink">
                <a href={`#${link.name}`}>
                  <Icon name={link.icon} size={18} class="text-current" />
                </a>
              </span>
            ))
          }
        </div>
        <p
          class="md:absolute bottom-0 right-0 xl:right-auto xl:left-0 whitespace-nowrap"
        >
          &copy; Copyright {new Date().getFullYear()} Huddle. All rights
          reserved.
        </p>
      </div>
    </div>
  </div>
</footer>
