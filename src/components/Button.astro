---
export interface Props {
  type?: "primary" | "secondary";
  classes?: string;
}

const { type = "primary", classes = "", ...rest } = Astro.props;
---

<button
  class={`rounded-full px-14 py-3 shadow-md text-sm font-semibold whitespace-nowrap ${
    type === "primary"
      ? "bg-pink text-white hover:opacity-80 "
      : "bg-white text-cyan-dark hover:bg-cyan-dark hover:text-cyan"
  } touch-manipulation transition duration-300 ${classes}`}
  {...rest}
>
  <slot />
</button>
